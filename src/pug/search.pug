                  img.img-fluid(src="../img/item/1.png", width="200" height="150")
                  .box_bg
                    input(style='width:100%;height:100%;opacity:0.00001;' type="submit" value="" name="item_img")
                    button.shop_add_car.ad1(type="button",value="",name="btn_car")
                      i.fas.fa-shopping-cart
                    button.shop_add_love(type="submit",value="",name="btn_love")
                      i.far.fa-heart
                .product_title title1
                .product_price price1
          .bg.bg1
            .alertBox
              .sm_icon
                span.sm_icon_xx x
              .line
                .right
                  img(src="../img/item/1.png", width="160" height="120")
                .left
                  span 商品名1
                  span.alert_price $$$$1
              form.alert_form(action="#", method="post")
                .line2
                  span 數量
                  .count
                    .minus -
                    input.num(type="text",name="count_num",value="1")
                    .add +
                  button.alert_box_addcar(type="submit",value="",name="btn_car") 加入購物車
          #bg
            #alertBox
